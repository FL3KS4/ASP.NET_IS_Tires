@model Eshop
@using WebApp_project.Models
@{
    ViewData["Title"] = "Správa Eshopu";
    Layout = "~/Views/Workers/WLayout.cshtml";
}

<p>
    <h1>Inventář</h1>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.znacka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rozmery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pocet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cena)
            </th>
            <th>

            </th>
            <th>
                <button class="btn btn-dark btn-outline-light changeColor" style="float:right" onclick="location.href='@Url.Action("AddNew","Workers")'">Přidat položku</button>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Eshop item in ViewBag.Tires)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.znacka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rozmery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pocet) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cena) Kč
            </td>
            <td>
                <a style="float:right" asp-action="EditItem" asp-route-id="@item.ID">Edit</a>          
            </td>
            <td>
                <form asp-action="Delete" method="post" asp-route-id="@item.ID">
                    <button style="float:right" class="btn btn-dark btn-outline-light changeColor">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
