@model Guest
@using WebApp_project.Models
@{
    ViewData["Title"] = "Rezervace bez přihlášení";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="text-align:center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @{
                @Html.Raw(TempData["msg"])
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">

            @using (Html.BeginForm())
            {
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="true" aria-controls="flush-collapseOne">
                                Osobní informace
                            </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.name)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.name, new { @class = "form-control", placeholder = "Petr", style = "width:auto" })
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.name)</div>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.lastName)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.lastName, new { @class = "form-control", placeholder = "Klitsch", style = "width:auto" })
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.lastName)</div>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.telephoneNum)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.telephoneNum, new { @class = "form-control", @type = "number", placeholder="123456789", max="999999999", style = "width:auto", min="000000000"})
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.telephoneNum)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                                Car information
                            </button>
                        </h2>
                        <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.brand)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.brand, new { @class = "form-control", placeholder = "VW GOLF 1.9", style = "width:auto" })
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.brand)</div>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.spz)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.spz, new { @class = "form-control", placeholder = "7T71234", style = "width:auto" })
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.spz)</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.serviceType)
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.serviceType, (List<SelectListItem>)ViewBag.Problems, new { @class = "form-control",style = "width:auto" })
                                    </div>
                                    <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.serviceType)</div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.vehicleType)
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.vehicleType, (List<SelectListItem>)ViewBag.Cars, new { @class = "form-control", style = "width:auto" })
                                        </div>
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.vehicleType)</div>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                                Time slot
                            </button>
                        </h2>
                        <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.date)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.date, new { @class = "form-control", @type = "date", style = "width:auto" })
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.date)</div>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    @Html.LabelFor(x => x.time)
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.time, new { @class = "form-control", @type = "time", style = "width:auto" })
                                        <div style="color:red;margin-top:5px;">@Html.ValidationMessageFor(x => x.time)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn btn-success">Rezervovat </button>
            }


        </div>
        <div class="col-sm-2"></div>
    </div>
</div>

